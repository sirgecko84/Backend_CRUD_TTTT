<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit user's information</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-3"><b>Edit user's information:</b></div>
            <form action="/put-crud" method="POST">
                <div class="form-group">
                    <label for="exampleInputPassword1">Ten</label>
                    <input type="text" class="form-control" name="ten" placeholder="khanhdz" value="<%=user.ten %>">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">SDT</label>
                    <input type="text" class="form-control" name="sdt" placeholder="1234" value="<%=user.sdt %>">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Diachi</label>
                    <input type="text" class="form-control" name="diaChi" placeholder="Hanoi, Vietnam"
                        value="<%=user.diaChi %>">
                </div>
                <input name="id" value="<%= user.id %>" type="text" hidden />
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>


</body>

</html>