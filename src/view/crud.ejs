<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nhap thong tin NV</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-3">Nhap thong tin nhan vien</div>
            <form action="/post-crud" method="POST">
                <div class="form-group">
                    <label for="exampleInputPassword1">MaNV</label>
                    <input type="text" class="form-control" name="maNV" placeholder="1234">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                        placeholder="namdz@gmail.com" name="email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Ten</label>
                    <input type="text" class="form-control" name="ten" placeholder="namdz">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">GioiTinh</label>
                    <select name="gioiTinh" class="form-control">
                        <option value="1">Nam</option>
                        <option value="0">Nu</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">CCCD</label>
                    <input type="text" class="form-control" name="cccd" placeholder="123456789">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">NgaySinh</label>
                    <input type="date" class="form-control" name="ngaySinh">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">SDT</label>
                    <input type="text" class="form-control" name="sdt" placeholder="123456789">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Diachi</label>
                    <input type="text" class="form-control" name="diaChi" placeholder="Hanoi, Vietnam">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>


</body>

</html>